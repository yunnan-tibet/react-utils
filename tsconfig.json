{
  "compilerOptions": {
    "target": "ES5", 
    "module": "commonjs", 
    "jsx": "react", 
    "sourceMap": true, 
    "outDir": "./", 
    "baseUrl": "./",
    "declaration": true,
    "lib": ["es2017", "dom"],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "strict": true, 
    "noImplicitAny": true,
    "esModuleInterop": true 
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.js",
    "src/**/*.jsx"
  ]
}
